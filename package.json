    "json": "^11.0.0",
    "pg": "^8.16.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.1",
    "@types/pg": "^8.15.4",
